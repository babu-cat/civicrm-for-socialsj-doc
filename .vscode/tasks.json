{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploy",
            "type": "shell",
            "command": "gh workflow run deploy.yml",
        },
        {
            "label": "build",
            "type": "shell",
            "command": [
                "docker run --rm",
                "--user $(id -u):$(id -g)",
                "--env HOME=/tmp",
                "-v ${workspaceFolder}:/docs",
                "--entrypoint /bin/sh",
                "squidfunk/mkdocs-material",
                "-c",
                "'pip install --no-cache-dir mkdocs-material-extensions mkdocs-glightbox &&",
                "mkdocs build'"
            ]
        }
    ]
}