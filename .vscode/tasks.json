{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploy",
            "type": "shell",
            "command": "mkdocs gh-deploy"
        },
        {
            "label": "build",
            "type": "shell",
            "command": [
                "source venv/bin/activate;",
                "mkdocs build --clean"
            ]
        },
        {
            "label": "serve",
            "type": "shell",
            "command": [
                "source venv/bin/activate;",
                "mkdocs serve"
            ]
        },
        {
            "label": "linux-install",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/tasks_scripts/linux-install.sh"
        }
    ]
}